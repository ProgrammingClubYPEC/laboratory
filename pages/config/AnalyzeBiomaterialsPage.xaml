<Page x:Class="laboratory.pages.config.AnalyzeBiomaterialsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:laboratory.pages.config"
      Title="AnalyzeBiomaterialsPage"
      Height="300" Width="300">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ComboBox x:Name="ordersComboBox"
                  Width="200"
                  VerticalAlignment="Center" HorizontalAlignment="Center"
                  SelectionChanged="ordersComboBox_SelectionChanged"
                  >
        </ComboBox>
        <Button x:Name="acceptSelectedServiceBtn"
                Content="Отправить на исследование"
                Grid.Row="1"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Click="acceptSelectedServiceBtn_Click"
                />
    </Grid>
</Page>
